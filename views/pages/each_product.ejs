<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cosmic Runner V3 - G.R Repz</title>
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Global Styles */
        :root {
            --dark-background: radial-gradient(ellipse at bottom, #2b0c3f 0%, #0c0816 100%);
            --glowing-purple: #a855f7;
            --glowing-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
            --card-background: rgba(0, 0, 0, 0.4);
            --card-border: rgba(139, 92, 246, 0.5);
            --main-text-color: #fff;
            --secondary-text-color: #d1d5db;
            --button-color: #9333ea;
            --accent-green: #10b981;
            --star-color: #fde047;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--dark-background);
            min-height: 100vh;
            color: var(--main-text-color);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            overflow-x: hidden;
        }

        /* Main Container */
        .container {
            width: 90%;
            backdrop-filter: blur(5px);
            border-radius: 1rem;
            display: flex;
            flex-direction: column;

        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--glowing-purple);
        }

        /* Product Grid Layout */
        .product-grid {
            display: flex;
            flex-direction: column;
        }



        /* --- Product Image Section (Left Column) --- */
        .image-section {
            display: flex;
            flex-direction: column;
            border-radius: 0.75rem;
        }

        .product-image {

            object-fit: cover;
            width: 100%;
            height: 400px;
            border-radius: 0.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
            margin: 30px 0px;
            transition: transform 0.3s ease;
        }


        .product-image:hover {
            transform: scale(1.02);
        }

        /* --- Details & Review Section (Right Column) --- */
        .details-reviews-section {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        /* Product Info Block */
        .product-info-block {
            padding: 1.5rem;
            background-color: rgba(15, 11, 26, 0.6);
            border: 1px solid var(--card-border);
            border-radius: 0.75rem;
            margin: 30px 0px;
        }

        .product-name {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            color: var(--glowing-purple);
        }

        .product-brand {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--secondary-text-color);
            margin-bottom: 1rem;
        }

        .product-price {
            font-size: 2rem;
            font-weight: 900;
            color: var(--accent-green);
            margin-bottom: 1.5rem;
        }

        .product-description {
            font-size: 14px;
            line-height: 1.6;
            color: var(--secondary-text-color);
            margin-bottom: 2rem;
        }

        P {
            margin: 0px;
        }

        /* Options (Size Selector) */
        .options-group {
            margin-bottom: 1.5rem;
        }

        .options-group label {
            display: block;
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .size-selector {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .size-button {
            padding: 0.5rem 1rem;
            border: 1px solid var(--card-border);
            background-color: rgba(15, 11, 26, 0.9);
            color: var(--main-text-color);
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
        }

        .size-button.selected,
        .size-button:hover {
            background-color: var(--glowing-purple);
            border-color: var(--glowing-purple);
            box-shadow: 0 0 8px rgba(168, 85, 247, 0.7);
        }

        /* Action Buttons */
        .action-container {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            margin-top: 1.5rem;
        }

        .buy-button,
        .cart-button {
            flex: 1;
            padding: 1rem 1.5rem;
            font-weight: 700;
            border-radius: 9999px;
            border: none;
            cursor: pointer;
            font-size: 1.125rem;
            transition: all 0.3s ease-in-out;
        }

        .buy-button {
            background-color: var(--accent-green);
            color: black;
            box-shadow: 0 0 10px rgba(16, 185, 129, 0.7);
        }

        .buy-button:hover {
            background-color: #059669;
            color: white;
            box-shadow: 0 0 20px rgba(16, 185, 129, 1);
        }

        .cart-button {
            background-color: var(--button-color);
            color: white;
            box-shadow: 0 0 10px rgba(139, 92, 246, 0.7);
        }

        .cart-button:hover {
            background-color: var(--glowing-purple);
            box-shadow: 0 0 20px rgba(139, 92, 246, 1);
        }

        /* --- Reviews Section --- */
        .reviews-section {
            padding: 1.5rem;
            background-color: rgba(15, 11, 26, 0.6);
            border: 1px solid var(--card-border);
            border-radius: 0.75rem;
        }

        .reviews-section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--glowing-purple);
            border-bottom: 2px solid var(--card-border);
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .rating-summary {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .average-rating {
            font-size: 2rem;
            font-weight: 900;
            color: var(--star-color);
        }

        .star-rating {
            font-size: 1.5rem;
            color: var(--star-color);
        }

        .review-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .review-item {
            border-bottom: 1px dashed rgba(255, 255, 255, 0.1);
            padding-bottom: 1rem;
        }

        .review-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .reviewer-name {
            font-weight: 600;
            color: var(--glowing-purple);
        }

        .review-text {
            color: var(--secondary-text-color);
            line-height: 1.5;
        }

        /* Review Form */
        .review-form-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: var(--main-text-color);
        }

        .form-input,
        .form-textarea,
        .form-select {
            width: 100%;
            padding: 0.75rem;
            margin-bottom: 1rem;
            background-color: rgba(0, 0, 0, 0.6);
            border: 1px solid var(--card-border);
            border-radius: 0.5rem;
            color: var(--main-text-color);
            box-sizing: border-box;
            resize: vertical;
        }

        .form-input:focus,
        .form-textarea:focus,
        .form-select:focus {
            outline: none;
            border-color: var(--glowing-purple);
            box-shadow: 0 0 5px rgba(168, 85, 247, 0.7);
        }

        .submit-review-button {
            padding: 0.75rem 2rem;
            background-color: var(--button-color);
            color: white;
            font-weight: 600;
            border-radius: 9999px;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            box-shadow: 0 0 10px rgba(139, 92, 246, 0.7);
        }

        .submit-review-button:hover {
            background-color: var(--glowing-purple);
            box-shadow: 0 0 15px rgba(139, 92, 246, 1);
        }

        .message-box {
            background-color: #2c2c2c;
            border: 1px solid var(--glowing-purple);
            border-radius: 0.5rem;
            padding: 1rem;
            text-align: center;
            margin-top: 1rem;
            display: none;
            word-wrap: break-word;
        }
    </style>
</head>

<body>

    <% if (user.Role=='User') { %>
    <%- include('../includes/navbar.ejs') %>
        <%- include('../includes/cart.ejs') %>

      <% } %>
            <div class="container">


                <div class="product-grid">
                    <!-- Product Image Section -->
                    <div class="image-section">
                        <!-- Using a generic placeholder image URL -->
                        <img src="<%= product.img_url %>" alt="Cosmic Runner V3 Sneaker" class="product-image"
                            onerror="this.onerror=null; this.src='https://placehold.co/450x450/3e1a63/ffffff?text=Product+Image';">

                        <div class="product-info-block">
                            <h2 class="product-name">
                                <%= product.title %>
                            </h2>
                            <p class="product-brand">
                                <%= product.category %> > <%= product.subCategory %>
                            </p>


                            <div class="rating-summary">
                                <span class="average-rating">4.8</span>
                                <span class="star-rating">
                                    <!-- 5 Stars SVG representation using unicode ★ -->
                                    ★★★★<span style="color: rgba(255, 255, 255, 0.3);">★</span> (210 Reviews)
                                </span>
                            </div>

                            <p class="product-price">$<%= product.price %>
                            </p>

                            <p class="product-description">The third generation of our popular Cosmic Runner is lighter,
                                faster,
                                and features enhanced anti-gravity foam. Perfect for urban exploration or intergalactic
                                sprints.
                                The mesh upper ensures maximum breathability while the reinforced sole provides
                                unmatched
                                durability.</p>

                            <div class="options-group">
                                <label for="size-select">Select Size:</label>
                                <div class="size-selector">

                                    <% for( let i=0; i < product.available_sizes.length; i++ ) { %>
                                        <button class="size-button" data-size="<%= product.available_sizes[i] %>">
                                            <%= product.available_sizes[i] %>
                                        </button>
                                        <% } %>

                                </div>
                            </div>

                            <% if (user.Role=='User') { %>
                            <div class="action-container">

                                <button class="cart-button" onclick='addToCart(<%- JSON.stringify(product) %>)'>
                                    Add to Cart
                                </button>

                            </div>

                             <% } %>
                        </div>
                    </div>

                    <!-- Details & Review Section -->
                    <div class="details-reviews-section">
                        <!-- Product Information -->


                        <!-- Reviews Section -->
                        <div class="reviews-section">
                            <h3 class="reviews-section-title">Customer Reviews</h3>

                            <ul class="review-list">
                                <% for( let i = 0; i < reviews.length; i++ ) { %>
                                         <li class="review-item">
                                    <div class="review-header">
                                        <span class="reviewer-name"><%= reviews[i].createdby.username %></span>
                                        <span class="star-rating">
                                            <% let stars= ""  %> 
                                            <% for( let j = 0; j < reviews[i].rating; j++ ) { %>
                                                 <% stars+="★" %>
                                            <% } %>

                                            <%= stars %>

                                            </span>
                                    </div>
                                    <p class="review-text"><%= reviews[i].description %></p>
                                </li>
                                <% } %>
                               
                               
                            </ul>

                            <% if (user.Role=='User') { %>
                             
                          
                            <p class="review-form-title">Write a Review</p>
                            <form id="review-form" action="/product/<%= product._id %>/review" method="POST" >
                                <!-- <input type="text" id="reviewer-name" name="username" class="form-input" placeholder="Your Name"
                                    required> -->
                                <select id="review-rating" class="form-select" required name="rating">
                                    <option value="">Select Rating (1-5 Stars)</option>
                                    <option value="5">★★★★★ (5 Stars)</option>
                                    <option value="4">★★★★ (4 Stars)</option>
                                    <option value="3">★★★ (3 Stars)</option>
                                    <option value="2">★★ (2 Stars)</option>
                                    <option value="1">★ (1 Star)</option>
                                </select>
                                <textarea id="review-comment" class="form-textarea"
                                    placeholder="Your detailed review..." required name='description'></textarea>
                                <button type="submit" class="submit-review-button">Submit Review</button>
                            </form>
                          <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <script src="/js/cart.js"></script>
            <script>
                let cart =getCart()
                items = cart != null ?cart.length : 0
                console.log(cart)
                console.log(items)
                document.querySelector('.countCartItem').innerHTML = items
                console.log('setting the cart')
            </script>

          <script>
           
            // --- DOM Elements ---
            let product=<%- JSON.stringify(product) %>;
            let selected_size=''
            const reviewForm = document.getElementById('review-form');
            const statusMessageEl = document.getElementById('status-message');
            const sizeButtons = document.querySelectorAll('.size-button');

            // --- Utility Functions ---
            function showMessage(message, isError = false) {
                statusMessageEl.textContent = message;
                statusMessageEl.style.backgroundColor = isError ? 'rgba(239, 68, 68, 0.2)' : 'rgba(168, 85, 247, 0.2)';
                statusMessageEl.style.borderColor = isError ? 'var(--accent-red)' : 'var(--glowing-purple)';
                statusMessageEl.style.display = 'block';
                // Hide after 5 seconds
                setTimeout(() => {
                    statusMessageEl.style.display = 'none';
                }, 5000);
            }
            
               
            sizeButtons.forEach((button,index) => {
                button.addEventListener('click', () => {
                    sizeButtons.forEach(btn => btn.classList.remove('selected'));
                    button.classList.add('selected');
                    selected_size=button.innerText
                    console.log(selected_size)
                    sizeChanged(product._id)

                });
                 if(index==0){
                    button.classList.add('selected')
                    selected_size=button.innerText
                }
            });
            console.log(selected_size)
            window.showMessage = showMessage;
       
    </script> 

</body>

</html>