<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>G.R Repz Admin Dashboard</title>
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --dark-background: radial-gradient(ellipse at bottom, #2b0c3f 0%, #0c0816 100%);
            --glowing-purple: #a855f7;
            --glowing-shadow: 0 0 10px rgba(139, 92, 246, 0.7);
            --dark-gray: #1f2937;
            --light-gray: #9ca3af;
            --card-background: rgba(0, 0, 0, 0.4);
            --card-border: rgba(139, 92, 246, 0.5);
            --main-text-color: #fff;
            --secondary-text-color: #d1d5db;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--dark-background);
            color: var(--main-text-color);
            min-height: 100vh;
            display: flex;
            padding: 1rem;
            gap: 1rem;
            overflow-x: hidden;
        }

        /* Dashboard Layout */
        .dashboard-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }


        /* Main Content */
        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            margin: 0px 20px;
        }

        .burgur {
            display: none;
            width: 30px;
            height: 40px;
            cursor: pointer;
        }
    </style>
    <style>
        @media screen and (max-width:1030px) {

            .sidebar {
                position: absolute;
                height: 100%;
                z-index: 10;
                left: -500px;
                transition: all linear 0.5s;
            }
            .burgur{
                display: inline-block;
            }

        }
    </style>
</head>

<body>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <%- include('includes/sidebar.ejs') %>

            <!-- Main Content -->
            <main class="main-content">
                <%- include('includes/backend_header.ejs') %>
                    <%- include('includes/flashMessage.ejs') %>
                        <%- body -%>
            </main>
    </div>

</body>
<script>
    let burgur=document.querySelector('.burgur')
    burgur.addEventListener('click',(event)=>{
        let sidebar=document.querySelector('.sidebar')

       const element_style= window.getComputedStyle(sidebar)
       console.log(element_style)
       if (element_style.left=='-500px'){
        sidebar.style.left='0px'
    }
    else{
           sidebar.style.left='-500px'

       }
    })
</script>

</html>